{
  "name": "hackeros-games",
  "version": "1.0.0",
  "description": "A pixel-art styled desktop gaming hub for HackerOS games",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --linux appimage"
  },
  "build": {
    "appId": "com.hackeros.games",
    "productName": "HackerOS Games",
    "linux": {
      "target": ["AppImage"],
      "category": "Game"
    },
    "files": [
      "index.html",
      "styles.css",
      "renderer.js",
      "main.js",
      "*.png"
    ]
  },
  "dependencies": {
    "electron": "^22.0.0",
    "tailwindcss": "^2.2.19"
  },
  "devDependencies": {
    "electron-builder": "^23.6.0"
  },
  "author": "HackerOS Team",
  "license": "MIT"
}
